{
	"editor.fontFamily": "SF Mono, Menlo, Consolas, Source Code Pro",
	"editor.fontSize": 13,
	// "editor.lineHeight": 24,
	"editor.rulers": [
		80
	],
	"editor.formatOnType": true,
	"editor.scrollBeyondLastLine": false,
	"editor.acceptSuggestionOnEnter": false,
	"editor.wrappingColumn": -1,
	"editor.wrappingIndent": "same",
	"editor.tabSize": 4,
	// "editor.mouseWheelScrollSensitivity": 0.3,
	"editor.insertSpaces": false,
	"window.openFilesInNewWindow": true,
	"window.reopenFolders": "all",
	"files.trimTrailingWhitespace": true,
	"javascript.suggest.useCodeSnippetsOnMethodSuggest": true,
	"clang.cxxflags": [
		"-std=c++14",
		"-pedantic",
		"-Weverything",
		"-Wno-c++98-compat",
		"-Wno-c++98-compat-pedantic",
		"-Wno-unused-macros",
		"-Wno-shadow",
		"-O3"
	],
	"clang.cflags": [
		"-std=c11",
		"-Weverything"
	],
	// "clang.completion.enable": false,
	"files.autoSave": "afterDelay",
	"editor.fontLigatures": true,
	"editor.renderWhitespace": "none",
	"editor.formatOnSave": true,
	// "terminal.integrated.shell.windows": "C:\\Windows\\system32\\WindowsPowerShell\\v1.0\\powershell.exe"
	// kann das in eine Erweiterung?
	"files.associations": {
		"*.clang-format": "yaml",
		"autostart": "shellscript",
		"*.npmrc": "ini",
		"*.service": "ini",
		"*.h": "c"
	},
	"workbench.editor.showTabs": true,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/._*": true,
		"**/*.un~": true
	},
	"beard-color.backgroundColor": "#1e1e1e",
	"beard-color.foregroundColor": "#f2f0c9",
	"beard-color.classColor": "#81d8d0",
	"beard-color.commentColor": "#406847",
	"beard-color.controlColor": "#9393b0",
	"beard-color.entityColor": "#b0535e",
	"beard-color.functionColor": "#fce779",
	"beard-color.headerColor": "#000080",
	"beard-color.invalidColor": "#a62844",
	"beard-color.nameColor": "#bfe3e3",
	"beard-color.neutralColor": "#606073",
	"beard-color.numberColor": "#7ba886",
	"beard-color.punctuationColor": "#5986c9",
	"beard-color.regexColor": "#6c63a6",
	"beard-color.sidebarColor": "#252526",
	"beard-color.stringColor": "#f2b33d",
	"beard-color.strregColor": "#b0535e",
	"beard-color.typeColor": "#2484bf",
	"git.confirmSync": false
}