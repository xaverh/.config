{
	"editor.fontFamily": "PragmataPro, Menlo, SF Mono, PragmataPro, Ubuntu Mono, SF Mono, Menlo, Consolas, Source Code Pro",
	"editor.fontSize": 16,
	"terminal.integrated.fontSize": 16,
	// "editor.lineHeight": 24,
	"editor.rulers": [
	],
	"editor.formatOnType": true,
	"editor.scrollBeyondLastLine": false,
	"editor.acceptSuggestionOnEnter": false,
	"editor.wrappingColumn": 0,
	"editor.wrappingIndent": "same",
	"editor.tabSize": 8,
	"editor.insertSpaces": true, // XXX
	"editor.cursorBlinking": "smooth",
	"editor.renderLineHighlight": "line",
	"editor.renderControlCharacters": true,
	"window.reopenFolders": "all",
	"files.trimTrailingWhitespace": true,
	"clang.cxxflags": [
		"-std=c++14",
		"-pedantic",
		"-Weverything",
		"-Wno-c++98-compat",
		"-Wno-c++98-compat-pedantic",
		"-Wno-unused-macros",
		"-Wno-shadow",
		"-O3"
	],
	"clang.cflags": [
		"-std=c11",
		"-Weverything"
	],
	"clang.completion.enable": false,
	"files.autoSave": "off",
	"editor.fontLigatures": true,
	"editor.renderWhitespace": "none",
	"editor.formatOnSave": false,
	// "terminal.integrated.shell.windows": "C:\\Windows\\system32\\WindowsPowerShell\\v1.0\\powershell.exe"
	// kann das in eine Erweiterung?
	"files.associations": {
		"*.clang-format": "yaml",
		"autostart": "shellscript",
		"*.npmrc": "ini",
		"*.service": "ini",
		"*.h": "c"
	},
	"workbench.editor.showTabs": true,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/._*": true,
		"**/*.un~": true
	},
	"git.confirmSync": false,
	"window.zoomLevel": 0,
	"zenMode.fullScreen": true,
	"workbench.statusBar.visible": true,
	"C_Cpp.formatting": "disabled",
	"window.menuBarVisibility": "toggle",
	"[haskell]": {
		// "editor.insertSpaces": true
	}
}