				<command>
					thunar
				</command>
			</action>
		</item>
		<item label="Visual Studio Code">
			<action name="Execute">
				<command>
					code --new-window
				</command>
			</action>
		</item>
		<item label="LÉœafpad">
			<action name="Execute">
				<command>
					l3afpad
				</command>
			</action>
		</item>
		<item label="GIMP">
			<action name="Execute">
				<execute>gimp</execute>
			</action>
		</item>
		<item label="VLC media player">
			<action name="Execute">
				<command>
					vlc
				</command>
			</action>
		</item>
