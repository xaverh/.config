URxvt.intensityStyles: false
! XTerm*faceName: xft:Menlo:pixelsize=13

URxvt*geometry: 86x24
URxvt*scrollBar: false
! *termName: rxvt-unicode-256color
URxvt*font: xft:Menlo:pixelsize=14
URxvt*italicFont: xft:Menlo:pixelsize=14:italic
URxvt*boldFont: xft:Menlo:pixelsize=14:bold
URxvt*boldItalicFont: xft:Menlo:pixelsize=14:bold:italic
! URxvt*font: -sgi-screen-medium-r-normal--14-140-72-72-m-80--ascii
! URxvt*boldFont: -sgi-screen-bold-r-normal--14-140-72-72-m-80--ascii
! enhanced letter spacing for Menlo
URxvt*letterSpace: -1.5
! If you do not use the Perl extension features, you can improve the security and speed by disabling Perl extensions completely.
! URxvt.perl-ext:
