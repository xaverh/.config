WindowTitle {DateTime}
WindowSize  64 64

Init
 Begin
  Set $Time = (GetOutput {exec date "+%-H:%M %P"} 1 -1)
  Set $Zone = (GetOutput {exec date "+%Z"} 1 -1)
  Set $Date = (GetOutput {exec date "+%a %-d %b"} 1 -1)

  ChangeTitle 1 $Date
  ChangeTitle 2 $Time
  ChangeTitle 3 $Zone
End

PeriodicTasks
 Begin
  If (RemainderOfDiv (GetTime) 15)==0 Then
  Begin
   Set $Time = (GetOutput {exec date "+%-H:%M %P"} 1 -1)
   Set $Zone = (GetOutput {exec date "+%Z"} 1 -1)
   Set $Date = (GetOutput {exec date "+%a %-d %b"} 1 -1)

   ChangeTitle 1 $Date
   ChangeTitle 2 $Time
   ChangeTitle 3 $Zone
  End
End

Widget 1
Property
 Position 0 0
 Size 64 20
 Font `$[infostore.default_font]`
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

