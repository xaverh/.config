#!/usr/bin/sh

font=${PANEL_XFT_FONT:-"SGI Screen:pixelsize=14"}
bgcolor=${PANEL_BG_COLOR:-"#000000"}
fgcolor=${PANEL_FG_COLOR:-"#ffffff"}
bgselcolor=${PANEL_BG_SEL_COLOR:-"#005577"}
fgselcolor=${PANEL_FG_SEL_COLOR:-"#ffffff"}

cachedir=${XDG_CACHE_HOME:-"$HOME/.cache"}
if [ -d "$cachedir" ]; then
	cache=$cachedir/dmenu_run
	historyfile=$cachedir/dmenu_history
else			# if no xdg dir, fall back to dotfiles in ~
	cache=$HOME/.dmenu_cache
	historyfile=$HOME/.dmenu_history
fi

IFS=:
if stest -dqr -n "$cache" $PATH; then
	stest -flx $PATH | sort -u > "$cache"
fi
unset IFS

awk -v histfile=$historyfile '
	BEGIN {
		while( (getline < histfile) > 0 ) {
			sub("^[0-9]+\t","")
			print
			x[$0]=1
		}
	} !x[$0]++ ' "$cache" \
	| dmenu -i -f -fn "$font" -sf "$fgselcolor" -sb "$bgselcolor" -nb "$bgcolor" -nf "$fgcolor" "$@" \
	| awk -v histfile=$historyfile '
		BEGIN {
			FS=OFS="\t"
			while ( (getline < histfile) > 0 ) {
				count=$1
				sub("^[0-9]+\t","")
				fname=$0
				history[fname]=count
			}
			close(histfile)
		}

		{
			history[$0]++
			print
		}

		END {
			if(!NR) exit
			for (f in history)
				print history[f],f | "sort -t '\t' -k1rn >" histfile
		}
	' \
	| while read cmd; do ${SHELL:-"/bin/sh"} -c "$cmd" & done
